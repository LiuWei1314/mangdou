<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.p609915198.basemodule.widget.CircleImageView
            android:id="@+id/civ_head"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="@dimen/x22"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="啦啦啦"
                android:textColor="@color/text22"
                android:textSize="@dimen/text_size20" />

            <ImageView
                android:id="@+id/iv_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toRightOf="@id/tv_name"
                android:src="@mipmap/ic_vip" />

            <ImageView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toRightOf="@id/iv_vip"
                android:src="@mipmap/ic_title" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_recharge"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/y35"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y20"
        android:background="@drawable/shape_recharge_bt"
        android:text="充值"
        android:textColor="#95690D"
        android:textSize="@dimen/text_size16" />

    <TextView
        android:id="@+id/tv_consume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y10"
        android:textColor="#95690D"
        android:textSize="@dimen/text_size12"
        tools:text="已消费100忙豆" />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:text="忙豆等级"
        android:textColor="#4A4A4A"
        android:textSize="@dimen/text_size14" />

</LinearLayout>