<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/y19"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15"
        android:paddingTop="@dimen/y19">

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text03"
            android:textSize="@dimen/text_size16"
            tools:text="可用余额：0.00忙豆" />

        <TextView
            android:id="@+id/tv_charge"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y25"
            android:background="@drawable/shape_column_subcribe"
            android:gravity="center"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:text="充值"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size16" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_charge_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/ic_more"
        android:paddingBottom="@dimen/y19"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/y19"
        android:text="充值记录"
        android:textColor="@color/text03"
        android:textSize="@dimen/text_size14" />

    <TextView
        android:id="@+id/tv_consume_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/ic_more"
        android:paddingBottom="@dimen/y19"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/y19"
        android:text="消费记录"
        android:textColor="@color/text03"
        android:textSize="@dimen/text_size14" />
</LinearLayout>