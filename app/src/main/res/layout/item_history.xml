<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/x14"
    android:paddingTop="@dimen/y10"
    android:paddingRight="@dimen/x14"
    android:paddingBottom="@dimen/y10">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/x58"
        android:layout_height="@dimen/y58" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x14"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_menu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text33"
            android:textSize="@dimen/text_size16"
            tools:text="末日蟑螂" />

        <TextView
            android:id="@+id/tv_menu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y4"
            android:layout_marginBottom="@dimen/y4"
            android:textColor="@color/text99"
            android:textSize="@dimen/text_size12"
            tools:text="末日蟑螂" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_menu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_play"
                android:drawablePadding="@dimen/x4"
                android:textColor="@color/text99"
                android:textSize="@dimen/text_size12"
                tools:text="7.8万" />

            <TextView
                android:id="@+id/tv_menu4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x33"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_size12"
                tools:text="920集" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>