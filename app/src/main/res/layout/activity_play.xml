<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:src="@mipmap/ic_reward" />

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginBottom="@dimen/y30"
            android:src="@mipmap/ic_gift" />
    </com.zhy.autolayout.AutoFrameLayout>

    <com.liulishuo.magicprogresswidget.MagicProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y3"
        app:mpb_background_color="@color/textC7"
        app:mpb_fill_color="@color/main_text_selected" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y15"
        android:layout_marginBottom="@dimen/y10"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_pre"
            android:layout_width="@dimen/x56"
            android:layout_height="@dimen/y58"
            android:layout_marginRight="@dimen/x34"
            android:padding="@dimen/x20"
            android:src="@mipmap/ic_up" />

        <!--<FrameLayout-->
        <!--android:id="@+id/fl_play"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content">-->

        <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@mipmap/ic_play_circle" />-->

        <!--<ImageView-->
        <!--android:id="@+id/iv_play"-->
        <!--android:layout_width="@dimen/x27"-->
        <!--android:layout_height="@dimen/y48"-->
        <!--android:layout_gravity="center"-->
        <!--android:src="@mipmap/ic_playx60ing" />-->
        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_home_play" />
        <!--</FrameLayout>-->

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="@dimen/x56"
            android:layout_height="@dimen/y58"
            android:layout_marginLeft="@dimen/x34"
            android:padding="@dimen/x20"
            android:src="@mipmap/ic_next" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginBottom="@dimen/y20"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10">

        <com.p609915198.basemodule.widget.CircleImageView
            android:id="@+id/civ_head"
            android:layout_width="@dimen/x34"
            android:layout_height="@dimen/y34"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x14"
            android:layout_toRightOf="@+id/civ_head"
            android:textColor="@color/text33"
            android:textSize="@dimen/text_size14"
            tools:text="流氓" />

        <TextView
            android:id="@+id/tv_subscribe_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_name"
            android:layout_marginLeft="@dimen/x14"
            android:layout_marginTop="@dimen/y10"
            android:layout_toRightOf="@+id/civ_head"
            android:textColor="@color/text99"
            android:textSize="@dimen/text_size10"
            tools:text="被20万人关注" />

        <TextView
            android:id="@+id/tv_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="关注"
            android:textColor="@color/main_text_selected"
            android:textSize="@dimen/text_size10" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_audio_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginTop="@dimen/y24"
        android:textColor="@color/text33"
        android:textSize="@dimen/text_size18"
        tools:text="朴树-1 声音日记之音乐赏析" />

    <!--<LinearLayout-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginBottom="@dimen/y8"-->
    <!--android:layout_marginLeft="@dimen/x14"-->
    <!--android:layout_marginTop="@dimen/y8"-->
    <!--android:orientation="horizontal">-->

    <!--<TextView-->
    <!--android:id="@+id/tv_play_num"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:textColor="@color/text99"-->
    <!--android:textSize="@dimen/text_size10"-->
    <!--tools:text="2.9万次播放" />-->

    <TextView
        android:id="@+id/tv_play_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginBottom="@dimen/y20"
        android:textColor="@color/text99"
        android:textSize="@dimen/text_size10"
        tools:text="2015-01-14" />
    <!--</LinearLayout>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/line" />

</LinearLayout>