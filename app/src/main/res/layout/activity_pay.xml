<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <include layout="@layout/view_ad_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginTop="@dimen/y14"
        android:text="请选择充值金额"
        android:textColor="@color/text33"
        android:textSize="@dimen/text_size16" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y20"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginTop="@dimen/y14"
        android:textColor="@color/text66"
        android:textSize="@dimen/text_size12"
        tools:text="当前余额不足，还差7.1忙豆" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y20"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginRight="@dimen/x12"
        android:layout_marginTop="@dimen/y20"
        android:gravity="left"
        android:text="@string/pay"
        android:textColor="@color/text99"
        android:textSize="@dimen/text_size12" />
</LinearLayout>