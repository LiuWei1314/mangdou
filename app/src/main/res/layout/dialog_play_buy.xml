<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/x30">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购买确认"
        android:textColor="@color/text33"
        android:textSize="@dimen/text_size18" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:textColor="@color/text66"
            android:textSize="@dimen/text_size14"
            tools:text="节目：朴树   声音日记之音乐赏析" />

        <TextView
            android:id="@+id/tv_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y12"
            android:textColor="@color/text66"
            android:textSize="@dimen/text_size14"
            tools:text="集数：共1092集" />


        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y30"
            android:layout_marginTop="@dimen/y12"
            android:textColor="@color/text66"
            android:textSize="@dimen/text_size14"
            tools:text="价格：32.8忙豆" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_buy_now"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y40"
        android:background="@drawable/shape_mine_text_view"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size16"
        tools:text="立即购买" />

    <TextView
        android:id="@+id/tv_bulk_buy"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y40"
        android:layout_marginTop="@dimen/y30"
        android:background="@drawable/shape_text_bg1"
        android:gravity="center"
        android:textColor="@color/main_color"
        android:textSize="@dimen/text_size16"
        android:visibility="gone"
        tools:text="批量购买" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30"
        android:textColor="@color/text66"
        android:textSize="@dimen/text_size12"
        android:visibility="gone"
        tools:text="余额不足，还差436.8忙豆，请先充值" />
</LinearLayout>