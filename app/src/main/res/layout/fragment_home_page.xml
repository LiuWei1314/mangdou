<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x14"
        android:paddingRight="@dimen/x14">

        <!--<ImageView-->
        <!--android:layout_width="@dimen/x17"-->
        <!--android:layout_height="@dimen/y17"-->
        <!--android:layout_marginLeft="@dimen/x9"-->
        <!--android:src="@mipmap/ic_search" />-->

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="0dp"
            android:layout_height="@dimen/y25"
            android:layout_marginRight="@dimen/x10"
            android:layout_weight="1"
            android:background="@drawable/shape_edit_text"
            android:drawableLeft="@mipmap/ic_search"
            android:drawablePadding="@dimen/x15"
            android:paddingLeft="@dimen/x12"
            android:textSize="@dimen/text_size14" />

        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y20"
            android:src="@mipmap/ic_time" />

        <ImageView
            android:id="@+id/iv_download"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y20"
            android:layout_marginLeft="@dimen/x15"
            android:src="@mipmap/ic_download" />
    </LinearLayout>

    <com.p609915198.basemodule.widget.autolayout.AutoTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:auto_textSize_base_width="true"
        app:tabIndicatorColor="@color/main_color"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/main_color"
        app:tabTextAppearance="@style/TabTextSize"
        app:tabTextColor="@color/text33" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>