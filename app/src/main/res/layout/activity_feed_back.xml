<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <RelativeLayout
        android:id="@+id/rr_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x14"
            android:layout_marginTop="@dimen/y19"
            android:layout_marginBottom="@dimen/y19"
            android:text="问题选择"
            android:textColor="@color/text03"
            android:textSize="@dimen/text_size14" />

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x14"
            android:drawableRight="@mipmap/ic_more"
            android:drawablePadding="6dp"
            android:textColor="@color/text33"
            android:textSize="@dimen/text_size14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/lineDD" />

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y300"
        android:background="@color/white"
        android:gravity="start"
        android:hint="请输入问题,并留下联系方式,我们会尽快回复"
        android:padding="@dimen/x16"
        android:textColor="@color/text33"
        android:textSize="@dimen/text_size14" />

    <Button
        android:id="@+id/bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginRight="@dimen/x16"
        android:background="@drawable/shape_item_already_buy_comments"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size18" />

</LinearLayout>