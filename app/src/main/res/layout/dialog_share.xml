<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/y17"
            android:layout_marginTop="@dimen/y17"
            android:text="请选择分享平台"
            android:textColor="@color/text33"
            android:textSize="@dimen/text_size18" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x22"
            android:src="@mipmap/ic_close_pay_dialog" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y44"
        android:layout_marginTop="@dimen/y37"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wx_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="18dp"
            android:drawableTop="@mipmap/ic_wx"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/text33"
            android:textSize="@dimen/text_size16" />

        <TextView
            android:id="@+id/tv_wx_friend_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:drawablePadding="18dp"
            android:drawableTop="@mipmap/ic_wx_friend"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="@color/text33"
            android:textSize="@dimen/text_size16" />

        <TextView
            android:id="@+id/tv_qq_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:drawablePadding="18dp"
            android:drawableTop="@mipmap/ic_qq"
            android:gravity="center"
            android:text="QQ"
            android:textColor="@color/text33"
            android:textSize="@dimen/text_size16" />

        <TextView
            android:id="@+id/tv_qq_zon_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:drawablePadding="18dp"
            android:drawableTop="@mipmap/ic_qq_zon"
            android:gravity="center"
            android:text="QQ空间"
            android:textColor="@color/text33"
            android:textSize="@dimen/text_size16" />
    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>